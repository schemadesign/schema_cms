{
  "name": "SchemaCMS",
  "version": "1.0",
  "description": "Chrome Extension for SchemaCMS",
  "page_action": {
    "default_popup": "popup.html"
  },
  "options_page": "index.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "manifest_version": 2
}